<style lang="scss">



</style>

<template>

<demo-block1 title="基础用法" :padding="blockPadding">
  <van-switch1
    :checked="checked"
    @change.user="onChange"
  />
</demo-block1>

<demo-block2 title="禁用状态" :padding="blockPadding">
  <van-switch2
    :checked="checked"
    disabled="y" 
    @change.user="onChange"
  />
</demo-block2>

<demo-block3 title="加载状态" :padding="blockPadding">
  <van-switch3
    :checked="checked"
    loading="y"
    @change.user="onChange"
  />
</demo-block3>

<demo-block4 title="高级用法" :padding="blockPadding">
  <van-switch4
    :checked="checked2"
    size="36px"
    @change.user="onChange2"
  />
</demo-block4>

</template>

<script>
import wepy from 'wepy'
import demoBlock from '../components/demo-block'
import vanSwitch from '../components/van-switch'

export default class Switch extends wepy.page {

  config = {
    "navigationBarTitleText": "Switch 开关"
  }

  components = {
    'dmo-block1': demoBlock,
    'dmo-block2': demoBlock,
    'dmo-block3': demoBlock,
    'dmo-block4': demoBlock,
    'van-switch1': vanSwitch,
    'van-switch2': vanSwitch,
    'van-switch3': vanSwitch,
    'van-switch4': vanSwitch,
  }
  
  data = {
    checked: true,
    checked2: true
  }
  
  methods = {
    onChange({ detail }) {
      this.checked = detail;
      this.$apply();
    },

    onChange2({ detail }) {
      let that = this;
      wx.showModal({
        title: '提示',
        content: '是否切换开关？',
        success: res => {
          if (res.confirm) {
            that.checked2 = detail;
            that.$apply();
          }
        }
      });
    }
  }
  
}
</script>
